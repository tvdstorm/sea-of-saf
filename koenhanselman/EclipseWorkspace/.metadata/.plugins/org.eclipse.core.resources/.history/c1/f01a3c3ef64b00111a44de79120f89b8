grammar Sample;

options {
  language = Java;
}

@header {
  package a.b.c;
}

@lexer::header {
  package a.b.c;
}

program
	:	IDENT '{'
			personality
			behaviour
		'}'
	;

personality
	:	characteristic*
	;
	
characteristic
	:	IDENT '=' DIGIT
	;
	
LEFT_CURLY : '{';
RIGHT_CURLY : '}';
LEFT_BRACK : '[';
RIGHT_BRACK : ']';
LEFT_PAREN : '(';
RIGHT_PAREN : ')';

LETTER : ('a'..'z' | 'A'..'Z');
DIGIT : '0'..'9';

IDENT : LETTER (LETTER | DIGIT)*;
WS : (' ' | '\t' | '\n' | '\r' | '\f')+ {$channel = HIDDEN;};
