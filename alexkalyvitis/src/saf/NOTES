// Playing with Conditions
List<BaseCondition> conditions = new ArrayList<BaseCondition>();
conditions.add(new Condition("near"));
conditions.add(new And(new Condition("stronger"),new Or ("far","away")));
conditions.add(new Or("weaker","near"));

for(BaseCondition condition : conditions){
	if(condition.eval(conditions));
	System.out.println("Evaluates: " + condition.toString());
}